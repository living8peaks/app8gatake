<% notifications = @notifications.where.not(visitor_id: current_user.id) %>
<% if notifications.exists? %>
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3  notifications-bc">
        <%= render @notifications %>
        <%= link_to 'お知らせをすべて削除する', notification_path(@notifications.ids), method: :put, class: "btn btn-dark already-read" %>
        <%= paginate @notifications %>
      </div>
    </div>
  </div>
<% end %>
