<% provide(:title, 'Lend farmlands list') %>
<h1>List of agricultural land you want to use</h1>
<div class="container py-4">
  <div class="row">
    <div class="col-md-12">
      <div class="card-group">
        <div class="card-body">
          <ul class="tab-list">
            <li class="tab tab-active">全てを表示</li>
            <li class="tab">茅野市の農地</li>
            <li class="tab">原村の農地</li>
            <li class="tab">富士見町の農地</li>
            <li class="tab">地図で探す</li>
          </ul>
          <br>
          <div class="tabbox-contents">
            <div class="tabbox box-show">
              <div class="col-md-12">
                <div class="row">
                  <div class="card-body">
                    <div class="form-group">
                      <%= link_to '農地を貸したい', new_lend_farmland_path, class: "btn btn-primary my-3" %>
                      <%= search_form_for @q do |f| %>
                        <div class="select-box">
                          <%= f.label :農地の種類 %>
                          <%= f.select :lend_field_type_eq, LendFarmland.lend_field_types.to_a.map{|s|[t("activerecord.enum.lend_field_type.#{s[0]}"), "#{s[0]}"]}, include_blank: '農地の種類で検索' %>
                          <%= f.submit '検索', class: "btn btn-outline-dark search-btn mt-2" %>
                        </div>
                      <% end %>
                    </div>
                    <div class="text-right">
                      <%= link_to '一覧の表示に戻る', lend_farmlands_path, class: "btn btn-dark" %>
                    </div>
                    <hr>
                    <%= render @lend_farmlands %>
                  </div>
                </div>
              </div>
            </div>
            <div class="tabbox">
              <div class="lend_farmland-hr mb-3">
                <%= link_to '農地を貸したい', new_lend_farmland_path, class: "btn btn-primary my-3" %>
              </div>
              <%= render partial: 'lend_farmlands/lend_farmland', collection: @chino_index, as: :lend_farmland %>
            </div>
            <div class="tabbox">
              <div class="lend_farmland-hr mb-3">
                <%= link_to '農地を貸したい', new_lend_farmland_path, class: "btn btn-primary my-3"  %>
              </div>
              <%= render partial: 'lend_farmlands/lend_farmland', collection: @hara_index, as: :lend_farmland %>
            </div>
            <div class="tabbox">
              <div class="lend_farmland-hr mb-3">
                <%= link_to '農地を貸したい', new_lend_farmland_path, class: "btn btn-primary my-3"  %>
              </div>
              <%= render partial: 'lend_farmlands/lend_farmland', collection: @fujimi_index, as: :lend_farmland %>
            </div>
            <div class="tabbox">
              <div class="lend_farmland-hr mb-3">
                <%= link_to '農地を貸したい', new_lend_farmland_path, class: "btn btn-primary my-3"  %>
              </div>
              <div id="map"></div>
              <%= render template: 'lend_farmlands/index.js.erb' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
