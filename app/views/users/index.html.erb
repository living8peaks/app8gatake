<% provide(:title, 'All users') %>
<h1>ユーザー一覧</h1>
<div class="py-4">
  <div class="container">
    <ul class="users-index">
      <% @users.each do |user| %>
      <li>
        <div class="row">
          <div class="col-sm-2 media">
            <img class="align-self-center mr-3" alt="" src="/assets/placeimg_640_480_people (2).jpg" height="100"
              width="100">
          </div>
          <div class="col-sm-10">
            <div class="row">
              <div class="media-body">
                <h5><%= link_to user.name, user %></h5>
              </div>
            </div>
          </div>
        </div>
      </li>
      <% end %>
    </ul>
    <%= paginate @users %>
  </div>
</div>
