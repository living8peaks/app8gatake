<div% provide(:title, @title) %>
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h3><%= @title %></h3>
        <% if @users.any? %>
        <ul class="users follow">
          <%= render @users %>
        </ul>
        <%= will_paginate %>
        <% end %>
      </div>
      <div class="col-md-4">
        <section class="user_info">
          <h1><%= @user.name %></h1>
          <span><%= link_to "view my profile", @user %></span>
          <span><b>Posts:</b> <%= @user.posts.count %></span>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
          <% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user| %>
            <%= link_to , user.display_avatar if user.avatar.attached?, user %>
            <% end %>
          </div>
          <% end %>
        </section>
      </div>

    </div>
  </div>
