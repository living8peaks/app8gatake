<% provide(:title, @title) %>
<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <h5><%= @title %></h5>
      <% if @users.any? %>
      <div class="users follow">
        <%= render @users %>
      </div>
      <% end %>
    </div>
    <div class="col-sm-4">
      <section class="user_info">
        <h1><%= @user.name %></h1>
        <span><%= link_to "view my profile", @user %></span>
        <span><b>Posts:</b> <%= @user.posts.count %></span>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </div>
  </div>
</div>
