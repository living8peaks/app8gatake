<li>
  <div class="row">
    <div class="col-sm-2 media">
      <!-- <div class="align-self-center mr-3" height="100" width="100"> -->
      <%= image_tag user.display_avatar if user.avatar.attached? %>
    </div>
    <div class="col-sm-10">
      <div class="row">
        <div class="media-body">
          <h5><%= link_to user.name, user %></h5>
          <% if current_user.admin? && !current_user?(user) %>
          <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</li>
