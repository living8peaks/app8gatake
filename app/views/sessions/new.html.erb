<%= provide(:title, 'ログイン')%>
<div class="container">
  <div class="row">
    <div class="col-sm-4 offset-sm-4">
      <h1>ログイン</h1>
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :メールアドレス %>
      <%= f.email_field :email %>

      <%= f.label :パスワード %>
      <%= f.password_field :password %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <label class="auto-login">次回から自動ログイン</label>
      <% end %>

      <%= f.submit 'ログイン', class: "btn btn-dark" %>
      <% end %>
      <small class="login-link">
        <%= link_to 'アカウントをお持ちではないですか？', signup_path %>
      </small>
    </div>
  </div>
</div>
