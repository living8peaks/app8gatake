<% if @lend_farmland.favorited_by(current_user.id).present? %>
  <%= link_to lend_farmland_favorite_path(@lend_farmland, @lend_farmland.favorites.ids), method: :delete, remote: true do %>
    <div class="likes-size">
      <i class="fas fa-heart liking"></i>
      <%= lend_farmland.favorites.count %>
    </div>
  <% end %>
<% else %>
  <%= link_to lend_farmland_favorites_path(@lend_farmland), method: :post, remote: true do %>
    <div class="likes-size">
      <i class="far fa-heart disliking"></i>
      <%= lend_farmland.favorites.count %>
    </div>
  <% end %>
<% end %>
