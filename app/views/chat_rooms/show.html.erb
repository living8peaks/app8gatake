<% provide(:title, 'Chat room') %>
<h1>Chat room</h1>
<div class="chat-room__partner">
  <span class="chat-room__partner-name">
    <%= @chat_room_user.name %>
  </span>
  <% if @chat_room_user.avatar.attached? %>
    <div class="avatar">
      <%= image_tag @chat_room_user.display_avatar %>
    </div>
  <% else %>
    <img src="/assets/profile_default_img_128.png" class="default-avatar">
  <% end %>
  <div id='chat-messages'>
    <%= render @chat_messages %>
  </div>
  <form>
    <textarea data-behavior="chat_room_speaker" data-chat_room_id="<%= @chat_room.id %>" placeholder="メッセージを入力" class="chat-room__message-form_textarea"></textarea>
  </form>
