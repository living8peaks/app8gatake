<% provide(:title, 'Post list') %>
<h1>Post list</h1>
<div class="py-4">
  <div class="container">
    <div class="row">
      <div class="col-sm-8">
        <div class="card-deck">
          <div class="card">
            <img class="card-image-top" src="..." alt="">

            <div class="card-body">
