<div class="chat-message line-bc">
  <% if chat_message.user.id != current_user.id %>
    <div class="chat-message__partner balloon6">
      <% if @chat_room_user.avatar.nil? %>
        <div class="chat-message__partner-default-img .faceicon">
          <img src="/assets/profile_default_img_128.png" class="chat-default-avatar">
        </div>
      <% else %>
        <%= image_tag @chat_room_user.avatar, class: "chat-avatar" %>
      <% end %>
      <div class="chat-message__content chatting py-1">
        <div class="says">
          <p><%= chat_message.chatter %></p>
        </div>
      </div>
    </div>
  <% else %>
    <!--右コメント-->
    <div class="chat-message__current-user">
      <div class="chat-message__content main-color-bg mycomment py-2">
        <p><%= chat_message.chatter %></p>
      </div>
    </div>
  <% end %>
</div>
