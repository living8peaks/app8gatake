<div class="chat-message">
  <% if chat_message.user.id != current_user.id %>
    <div class="chat-message__partner">
      <% if @chat_room_user.avatar.nil? %>
        <img src="/assets/profile_default_img_128.png" class="default-avatar">
      <% else %>
        <%= image_tag @chat_room_user.display_avatar %>
      <% end %>
      <div class="chat-message__content">
        <%= chat_message.chatter %>
      </div>
    </div>
  <% else %>
    <div class="chat-message__current-user">
      <div class="chat-message__content main-color-bg">
        <%= chat_message.chatter %>
      </div>
    </div>
  <% end %>
</div>
